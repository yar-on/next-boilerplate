{
    "name": "next-boilerplate",
    "version": "1.0.0",
    "private": true,
    "description": "Production-ready Next.js 15+ boilerplate with TypeScript, React 19, and modern tooling",
    "author": "Your Name",
    "license": "MIT",
    "scripts": {
        "dev": "next dev",
        "dev:debug": "NODE_OPTIONS='--inspect' next dev",
        "build": "next build",
        "build:clean": "npm run build && rm -rf .next",
        "start": "next start",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css,scss}\"",
        "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,css,scss}\"",
        "type-check": "tsc --noEmit",
        "code-standard": "npm run lint:fix && npm run format && npm run type-check && npm run test && npm run build:clean",
        "test": "npm run test:jest && npm run test:e2e",
        "test:jest": "jest",
        "test:jest:watch": "jest --watch",
        "test:jest:coverage": "jest --coverage",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:debug": "playwright test --debug",
        "test:e2e:report": "playwright show-report",
        "test:e2e:ci": "playwright test --config=playwright.config.ci.ts",
        "analyze": "ANALYZE=true next build",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio",
        "db:check": "drizzle-kit check",
        "docker:db": "docker-compose up db -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f"
    },
    "dependencies": {
        "@emotion/cache": "^11.14.0",
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@mui/icons-material": "^7.3.7",
        "@mui/lab": "^7.0.1-beta.21",
        "@mui/material": "^7.3.7",
        "drizzle-orm": "^0.45.1",
        "next-intl": "^4.8.2",
        "pg": "^8.16.3",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "zod": "^4.3.5"
    },
    "devDependencies": {
        "@next/bundle-analyzer": "^16.1.1",
        "@playwright/test": "^1.57.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.1",
        "@testing-library/user-event": "^14.5.2",
        "@types/jest": "^30.0.0",
        "@types/node": "^25.0.3",
        "@types/pg": "^8.16.0",
        "@types/react": "^19.0.1",
        "@types/react-dom": "^19.0.1",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "drizzle-kit": "^0.31.8",
        "eslint": "^9.39.2",
        "eslint-config-next": "^16.1.6",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.5",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "jest-watch-typeahead": "^3.0.1",
        "lint-staged": "^15.2.10",
        "next": "^16.1.6",
        "prettier": "^3.7.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.54.0",
        "web-vitals": "^4.2.4"
    },
    "engines": {
        "node": ">=18.17.0",
        "npm": ">=9.0.0"
    }
}
